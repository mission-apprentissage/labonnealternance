{
  "name": "mna-doctrina-server",
  "version": "0.0.1",
  "description": "[MNA] App Template",
  "repository": "https://github.com/mission-apprentissage/doctrina.git",
  "private": false,
  "author": "MNA",
  "license": "MIT",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "nodemon --ignore tests/ src/index.js",
    "debug": "nodemon --inspect=0.0.0.0 --signal SIGINT --ignore tests/ src/index.js",
    "test": "DOCTRINA_LOG_LEVEL=fatal mocha --exit tests/**/*-test.js",
    "cli": "DOCTRINA_LOG_DESTINATIONS=stderr node src/cli.js",
    "coverage": "nyc --temp-dir .coverage/.nyc_output --report-dir .coverage --reporter=lcov --reporter=html yarn test",
    "lint": "eslint src/ tests/"
  },
  "dependencies": {
    "body-parser": "1.20.0",
    "boom": "7.3.0",
    "bunyan": "1.8.15",
    "bunyan-slack": "0.0.10",
    "commander": "9.2.0",
    "dotenv": "16.0.0",
    "env-var": "7.1.1",
    "express": "4.18.1",
    "joi": "17.6.0",
    "lodash-es": "4.17.21",
    "mongodb": "4.5.0",
    "oleoduc": "0.7.0",
    "pretty-ms": "7.0.1"
  },
  "engines": {
    "node": ">=12.11.0"
  },
  "prettier": {
    "printWidth": 120,
    "bracketSpacing": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "axiosist": "0.10.0",
    "chalk": "4.1.2",
    "eslint": "8.25.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-mocha": "10.1.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "lint-staged": ">=10",
    "mocha": "10.0.0",
    "mongodb-memory-server": "8.5.2",
    "nock": "13.2.4",
    "nodemon": "2.0.16",
    "nyc": "15.1.0",
    "prettier": "2.6.2"
  },
  "lint-staged": {
    "*.js": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  }
}
